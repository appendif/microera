<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="view_product_aging_report_tree" model="ir.ui.view">
        <field name="name">product.aging.report.tree</field>
        <field name="model">product.aging.report</field>
        <field name="arch" type="xml">
            <tree string="Product aging report" create="false">
                <field name="location_id" />
<!--            <field name="company_id" />		-->
                <field name="product_id" />
                <field name="brand_id" />
                <field name="supplier_id" />
<!--            <field name="qty_available" /> 	-->
                <field name="stock_real" />
                <field name="date_done" />
                <field name="origin" />
                <field name="picking_id" />
                <field name="product_qty" />
                <field name="qty" />
                
           </tree>
        </field>
    </record>

    <record id="view_product_aging_report_search" model="ir.ui.view">
        <field name="name">product.aging.report.search</field>
        <field name="model">product.aging.report</field>
        <field name="arch" type="xml">
            <search string="Product aging report">
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="product_id" default_focus="1"/>
                <field name="location_id" />
                <field name="supplier_id" context="{'contact_display':'partner'}"/>
                <field name="brand_id" />

                <group expand="1" string="Group By...">
                    <filter name="group_company" string="Company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                    <filter name="group_product" string="Product" context="{'group_by':'product_id'}"/>
                    <filter name="group_location" string="Location" context="{'group_by':'location_id'}"/>
                    <filter name="group_supplier" string="Supplier" context="{'group_by':'supplier_id'}"/>
                    <filter name="group_brand" string="Brand" context="{'group_by':'brand_id'}"/>
                </group>
            </search>
        </field>
    </record>
        
    <record id="action_product_aging_report" model="ir.actions.act_window">
        <field name="name">Product aging report</field>
        <field name="res_model">product.aging.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="help">...</field>
    </record>


    <menuitem 
    	id="menu_action_product_aging_report" 
    	action="action_product_aging_report" 
    	parent="jimo_sale_report.menu_jimo_reporting"
    	sequence="1" />

</data>
</openerp>
